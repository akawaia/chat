<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="600" prefWidth="800" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Chat.Client.ChatController">

    <AnchorPane fx:id="authPanel" prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #21b7d2;">
        <TextField fx:id="loginField" blendMode="MULTIPLY" layoutX="306.0" layoutY="264.0" promptText="login">
            <font>
                <Font size="15.0" />
            </font>
        </TextField>
        <PasswordField fx:id="passwordField" blendMode="MULTIPLY" layoutX="306.0" layoutY="312.0" onAction="#sendAuth" promptText="Password">
            <font>
                <Font size="15.0" />
            </font>
        </PasswordField>
        <Button fx:id="buttonLogIn" blendMode="MULTIPLY" layoutX="271.0" layoutY="371.0" mnemonicParsing="false" onAction="#sendAuth" prefHeight="30.0" prefWidth="120.0" text="Log in">
            <font>
                <Font name="Comic Sans MS" size="15.0" />
            </font>
        </Button>
        <Label layoutX="271.0" layoutY="193.0" prefHeight="42.0" prefWidth="248.0" text="Authorization" textFill="#045872">
            <font>
                <Font name="Comic Sans MS" size="38.0" />
            </font>
        </Label>
        <Button blendMode="MULTIPLY" layoutX="400.0" layoutY="369.0" mnemonicParsing="false" onAction="#entranceRegPanelButton" prefHeight="30.0" prefWidth="120.0" text="Registration">
            <font>
                <Font name="Comic Sans MS" size="16.0" />
            </font>
        </Button>
        <Hyperlink layoutX="326.0" layoutY="430.0" onAction="#entranceChangePassPanelHyperLink" prefHeight="25.0" prefWidth="138.0" text="Forgot you password ? " textFill="#141414">
            <font>
                <Font name="Comic Sans MS" size="12.0" />
            </font>
        </Hyperlink>
    </AnchorPane>

    <AnchorPane fx:id="registrationPanel" prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #21b7d2;" visible="false">
        <TextField fx:id="usernameRegistration" blendMode="MULTIPLY" layoutX="299.0" layoutY="265.0" prefHeight="35.0" prefWidth="187.0" promptText="Username">
            <font>
                <Font size="15.0" />
            </font>
        </TextField>
        <TextField fx:id="loginRegistration" blendMode="MULTIPLY" layoutX="299.0" layoutY="308.0" promptText="login">
            <font>
                <Font size="15.0" />
            </font>
        </TextField>
        <PasswordField fx:id="passwordRegistration" blendMode="MULTIPLY" layoutX="298.0" layoutY="348.0" promptText="Password">
            <font>
                <Font size="15.0" />
            </font>
        </PasswordField>
        <PasswordField fx:id="passwordRegistration1" blendMode="MULTIPLY" layoutX="298.0" layoutY="388.0" promptText="Repeat password">
            <font>
                <Font size="15.0" />
            </font>
        </PasswordField>
        <Button blendMode="MULTIPLY" layoutX="333.0" layoutY="434.0" mnemonicParsing="false" onAction="#regUsers" prefHeight="30.0" prefWidth="120.0" text="Register">
            <font>
                <Font name="Comic Sans MS" size="15.0" />
            </font>
        </Button>
        <Label layoutX="281.0" layoutY="193.0" prefHeight="53.0" prefWidth="222.0" text="Registration" textAlignment="RIGHT" textFill="#045872">
            <font>
                <Font name="Comic Sans MS" size="38.0" />
            </font>
        </Label>
        <Hyperlink layoutX="30.0" layoutY="24.0" onAction="#backOnAuthPanelFx" prefHeight="34.0" prefWidth="50.0" text="Back" textAlignment="CENTER" textFill="#045872">
            <font>
                <Font size="17.0" />
            </font>
        </Hyperlink>
    </AnchorPane>

    <AnchorPane fx:id="changePassPanel" prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #21b7d2;" visible="false">
        <TextField fx:id="loginChangePass" blendMode="MULTIPLY" layoutX="300.0" layoutY="267.0" promptText="login">
            <font>
                <Font size="15.0" />
            </font>
        </TextField>
        <PasswordField fx:id="oldPasswordChangePass" blendMode="MULTIPLY" layoutX="299.0" layoutY="307.0" promptText="Old password">
            <font>
                <Font size="15.0" />
            </font>
        </PasswordField>
        <PasswordField fx:id="newPasswordChangePass" blendMode="MULTIPLY" layoutX="299.0" layoutY="347.0" promptText="New password">
            <font>
                <Font size="15.0" />
            </font>
        </PasswordField>
        <PasswordField fx:id="newPasswordChangePass1" blendMode="MULTIPLY" layoutX="299.0" layoutY="389.0" promptText="Repeat new password">
            <font>
                <Font size="15.0" />
            </font>
        </PasswordField>
        <Button blendMode="MULTIPLY" layoutX="334.0" layoutY="437.0" mnemonicParsing="false" onAction="#changePass" prefHeight="30.0" prefWidth="120.0" text="Change">
            <font>
                <Font name="Comic Sans MS" size="15.0" />
            </font>
        </Button>
        <Label layoutX="231.0" layoutY="193.0" prefHeight="53.0" prefWidth="324.0" text="Change password" textAlignment="RIGHT" textFill="#045872">
            <font>
                <Font name="Comic Sans MS" size="38.0" />
            </font>
        </Label>
        <Hyperlink focusTraversable="false" layoutX="30.0" layoutY="24.0" onAction="#backOnAuthPanelFx" prefHeight="34.0" prefWidth="50.0" text="Back" textAlignment="CENTER" textFill="#045872">
            <font>
                <Font size="17.0" />
            </font>
        </Hyperlink>
    </AnchorPane>

    <AnchorPane fx:id="changeNamePanel" blendMode="SRC_ATOP" prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #21b7d2;" visible="false">
        <TextField fx:id="newUsernameChangeUsername" blendMode="MULTIPLY" layoutX="300.0" layoutY="267.0" promptText="New username">
            <font>
                <Font size="15.0" />
            </font>
            <effect>
                <Blend />
            </effect>
            <cursor>
                <Cursor fx:constant="TEXT" />
            </cursor>
        </TextField>
        <TextField fx:id="loginChangeUsername" blendMode="MULTIPLY" layoutX="300.0" layoutY="306.0" promptText="login">
            <font>
                <Font size="15.0" />
            </font>
            <cursor>
                <Cursor fx:constant="TEXT" />
            </cursor>
        </TextField>
        <PasswordField fx:id="passwordChangeUsername" blendMode="MULTIPLY" layoutX="300.0" layoutY="347.0" prefHeight="31.0" prefWidth="187.0" promptText="Password">
            <font>
                <Font size="15.0" />
            </font>
            <cursor>
                <Cursor fx:constant="TEXT" />
            </cursor>
        </PasswordField>
        <Button blendMode="MULTIPLY" layoutX="333.0" layoutY="403.0" mnemonicParsing="false" onAction="#changeUsername" prefHeight="30.0" prefWidth="120.0" text="Change">
            <font>
                <Font name="Comic Sans MS" size="15.0" />
            </font>
        </Button>
        <Label layoutX="231.0" layoutY="193.0" prefHeight="53.0" prefWidth="324.0" text="Change username" textAlignment="RIGHT" textFill="#045872">
            <font>
                <Font name="Comic Sans MS" size="38.0" />
            </font>
        </Label>
        <Hyperlink focusTraversable="false" layoutX="30.0" layoutY="24.0" onAction="#backOnChatPanel" prefHeight="34.0" prefWidth="50.0" text="Back" textAlignment="CENTER" textFill="#045872">
            <font>
                <Font size="17.0" />
            </font>
        </Hyperlink>
    </AnchorPane>

    <VBox fx:id="chatPanel" prefHeight="600.0" prefWidth="800.0" visible="false">
        <MenuBar>
            <Menu text="File">
                <MenuItem onAction="#exit" text="Exit" />
            </Menu>
            <Menu text="Edit">
                <MenuItem onAction="#changeUsernameMenuBar" text="Change username" />
            </Menu>
        </MenuBar>
      <HBox prefHeight="496.0" prefWidth="800.0">
         <children>
            <ScrollPane fx:id="scrollPaneChat" prefHeight="486.0" prefWidth="0.0" HBox.hgrow="ALWAYS">
               <padding>
                  <Insets left="5.0" right="5.0" />
               </padding>
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </HBox.margin>
               <content>
                  <VBox fx:id="chatBox" prefHeight="470.0" prefWidth="584.0" />
               </content>
            </ScrollPane>
            <ScrollPane fx:id="scrollPaneUsers" prefHeight="496.0" prefWidth="172.0">
               <content>
                  <VBox prefHeight="481.0" prefWidth="170.0">
                     <children>
                        <ListView fx:id="onlineUsers" layoutY="10.0" prefHeight="494.0" prefWidth="172.0" />
                     </children>
                  </VBox>
               </content>
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </HBox.margin>
            </ScrollPane>
         </children>
      </HBox>
        <HBox>
            <TextField fx:id="inputField" onAction="#sendMessage" prefHeight="70.0" prefWidth="609.0" HBox.hgrow="ALWAYS">
                <HBox.margin>
                    <Insets left="5.0" right="5.0" />
                </HBox.margin>
                <font>
                    <Font size="24.0" />
                </font>
            </TextField>
            <Button onAction="#sendMessage" prefHeight="67.0" prefWidth="172.0" text="SEND">
                <HBox.margin>
                    <Insets left="5.0" right="5.0" />
                </HBox.margin>
            </Button>
            <padding>
                <Insets bottom="5.0" top="5.0" />
            </padding>
        </HBox>
    </VBox>

</AnchorPane>
